<?xml version="1.0" encoding="UTF-8" ?>
<configuration debug="true">

	<property resource="schereg.conf" />

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%-30(%d{HH:mm:ss.SSS} [%thread]) %-5level %logger{32} - %msg%n</pattern>
		</layout>
	</appender>
	  
	<!--Daily rolling file appender -->
	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${log.path}/schereg.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${log.path}/old/schereg.%d{yyyy-MM-dd}.log</FileNamePattern>
		</rollingPolicy>

		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%-30(%d{HH:mm:ss.SSS} [%thread]) %-5level %logger{32} - %msg%n</Pattern>
		</layout>
	</appender>

	<root>
		<level value="info"/>
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
		<!-- <appender-ref ref="DB" />  -->
	</root>

	<logger name="org.opensaml">
		<level value="info" />
	</logger>
	<logger name="org.springframework.security">
		<level value="info" />
	</logger>
	
	<!-- Set this to debug if SAML messages should be shown -->
	<logger name="PROTOCOL_MESSAGE">
		<level value="debug" />
	</logger>
	
</configuration>