	<http security="none" pattern="/resources/**"/>
		
	<http disable-url-rewriting="true" auto-config="true" use-expressions="false" access-decision-manager-ref="accessDecisionManager" >
		<csrf disabled="true"/>
		<intercept-url pattern="/test/jumboFluid" requires-channel="http" access="IS_AUTHENTICATED_FULLY" />
		<logout invalidate-session="true" logout-url="/logout" logout-success-url="/" />
	</http>
		
	<global-method-security pre-post-annotations="enabled" secured-annotations="enabled" />
	
